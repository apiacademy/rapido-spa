<div>
    <h1>submenu</h1>
      <h4>{{projectName}}</h4>
</div>
<div style="width: 100%; height: 100%; z-index:-1;">
    <div class="sketch infobox">
      <h4>{{projectName}}</h4>
      <div class="form">
                    {{view "select" 
                        class="form-control" 
                        content=sketchList
                        optionValuePath="content.id"
                        optionLabelPath="content.label"
                        value=selectedSketch.id
                        }}
          <button type="button" class="btn btn-default small"  {{action 'newSketch'}}><span class="plus-icon"> </span> New Sketch</button>
      </div>
    </div>
    <div id="canvas" style="overflow:hidden">
        {{node-tree resources=model createChildAction='createChildResource' selectAction='nodeSelected'}}
    </div>                
</div><!-- .container-fluid -->

<!-- MODALS -->
<div id="modal_wizard_1" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create A Resource</h4>
		<h5>Basic Properties</h5>		  
      </div>
      <div class="modal-body">
          <div class="row">
              <div class="col-md-12">
        <form>
  			<fieldset>    				
				<div class="form-group"> 								
				{{twitter-typeahead id="createResourceWizard_name" class="form-control input-lg" placeholder="What is the name of your new resource?" value=newResourceName data=typeaheadData}}				
					<p class="help-block">Hint: Prepend your resource with a <b>:</b> if you want it to be a <i>dynamic</i> resource.  For example: :studentID</p>
				</div>		
				
				
				<div class="form-group"> 				
				<input class="form-control" type="text" placeholder="URL" readonly {{bind-attr value=newResourceUri}}>
                </div>
                
                <div class="form-group">
    			<textarea id="create-resource-description" rows="3" class="form-control" placeholder="Description"></textarea>
                    </div>
  			</fieldset>
		</form>
                  </div>
              </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
		  {{#if isPage1Valid}}
		  <button type="button" class="btn btn-success" data-dismiss="modal" {{action 'saveResource'}}>Finish</button>
		  <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'nextWizardStep'}}>Choose Methods...</button>
		  {{else}}
		  <button type="button" class="btn btn-success disabled" data-dismiss="modal" >Finish</button>
		  <button type="button" class="btn btn-default disabled" data-dismiss="modal" >Choose Methods...</button>
		  {{/if}}
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="modal_wizard_2" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create A Resource</h4>
		<h5>Methods</h5>		 
      </div>
      <div class="modal-body">
          <div class="row">
              <div class="col-md-12">
        <form>
  			<fieldset>    				
                <label class="checkbox-inline">
					{{input type="checkbox" name="GET" checked=isGETEnabled}} GET  							
				</label>
				<label class="checkbox-inline">
					{{input type="checkbox" name="PUT" checked=isPUTEnabled}} PUT  									
				</label>
				<label class="checkbox-inline">
					{{input type="checkbox" name="PATCH" checked=isPATCHEnabled}} PATCH  									
				</label>
				<label class="checkbox-inline">
					{{input type="checkbox" name="POST" checked=isPOSTEnabled}} POST			
				</label>
				<label class="checkbox-inline">
					{{input type="checkbox" name="DELETE" checked=isDELETEEnabled}} DELETE  									
				</label>
  			</fieldset>
		</form>
                  </div>
              </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success" data-dismiss="modal" {{action 'saveResource'}}>Finish</button>
		  <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'nextWizardStep'}}>Add Parameters...</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="modal_wizard_3" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create A Resource</h4>
		<h5>Parameters</h5>		 
      </div>
      <div class="modal-body">
          <div class="row">
              <div class="col-md-12">
        <form>
  			<label>Query Parameters</label>
				<h4>{{newTransitionUri}}?{{#each queryParameters}}<span contenteditable>{{this}}</span>=x&{{/each}}</h4>					
				{{input id="createTransitionWizard_newQueryParam" class="form-control" type="text" placeholder="New query parameter name" value=newTransitionQueryParameter}}					
		</form>
                  </div>
              </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success" data-dismiss="modal" {{action 'saveResource'}}>Finish</button>		  
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
