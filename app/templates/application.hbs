<section id="topnav">

{{#if session.isAuthenticated}}
<div class="row">
    <div class="col-md-1">{{#link-to 'projects'}}<h3>Rápido!</h3>{{/link-to}}</div>
    <div class="col-md-10 navbar-btn text-center">{{outlet 'projectmenu'}}</div>
    <div class="col-md-1 pull-right">
        <div class="btn-group navbar-btn">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-label="Right Align">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li><a {{action 'signOut'}} href="#">Sign Out</a></li>
                <li class="divider"></li>
                <li><a {{action 'manage'}} href="#">Manage Account</a></li>
            </ul>
            <div><small class="align-right">{{username}}</small></div>
        </div>
    </div>
</div>
{{else}}


<div class="row">
    <div class="col-md-1"><a href="#"><h3>Rápido!</h3></a></div>
    <div class="col-md-2 col-md-offset-9 pull-right">
        <form class="login-form navbar-form navbar-right" {{action 'authenticate' on='submit'}}>
        <div class="form-group">
            {{input type="text" class="login-name form-control" value=identification placeholder="username"}}  {{input type="password" value=password class="login-password form-control" placeholder="password"}}
        </div>
        <button type="submit" class="login-submit btn btn-default">Submit</button>
        </form>    
    </div>
</div>
{{/if}}      
</section>
{{#if session.isAuthenticated}}
{{outlet}}
{{else}}
{{#if subscribed}}
<div class="row">
    <div class="col-md-12">
        <h4>Thank you for signing up!</h4>
        <p>You should receive a confirmation email shortly.</p>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-md-4 col-md-offset-4 bg-info" style="padding-bottom:1.0em">
        <form role="form">
          <div style="padding-bottom: 0.5em"><h4>Sign up for early access</h4></div>
          <div class="form-group">{{input class='form-control' type='email' value=email placeholder='Enter email address'}}</div>
          <div class="form-group">{{input class='form-control' type='text' value=firstName placeholder='First Name'}}</div>
          <div class="form-group">{{input class='form-control' type='text' value=lastName placeholder='Last Name'}}</div>
          <button {{action 'register'}} type="submit" class="btn btn-default pull-right">Submit</button>
        </form>
    </div>
</div>
{{/if}}
{{/if}}
