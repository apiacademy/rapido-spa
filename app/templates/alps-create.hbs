<div class="row">
<div class="col-md-12">
<h2>Create ALPS Profile</h2>
</div>
</div>
<div class="row">
    <div class="col-md-6 pull-right">
        <button type="button" class="btn btn-success" {{action 'save'}}>Create</button>
    </div>
    <div class="col-md-6 pull-left">
	<form>
        <div class="form-group">
        {{input class="form-control" placeholder="Profile Name" value=name}}
        </div>
        <div class="form-group">
        {{input class="form-control" value=description placeholder="Description"}}
        </div>
     </form>
    </div>
</div>
<div class="row">
      <div class="col-md-12" id="editor">
        {{ace-editor 
			text=alpsBody 
			mode=aceMode 
			typeAheadSuggestions=suggestions 
            nodeList=stateNames
			typeAheadAction="setTypeAheadList"  
            onChangeAction="updated" 
			suggestionClicked=suggestion}}
        </div>
</div>
