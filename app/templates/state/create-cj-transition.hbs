<!-- todo animate the pane with a Jquery UI slide -->
<div class="row create-transition-wizard">
    <div class="col-md-12">
   
        <div class="row wizard-header"><div class="col-md-12"><center><h2>Create a Collection+JSON Link</h2></center></div></div>
   
    <div class="row"> 
    <div class="col-md-6 col-md-offset-3">

    {{#if wizard_start}}
    <h3>What kind of link?</h3>
    <div class="form-group">
        <button type="button" class="btn btn-primary" {{action 'createItem'}}>Add a Child Item</button>
        <button type="button" class="btn btn-primary" {{action 'createLink'}}>Create a Link</button>
        <button type="button" class="btn btn-primary" {{action 'createQuery'}}>Create a Query</button>
    </div>
    {{/if}}

    {{#if wizard_createItem }}
        <div class="input-group">
            {{twitter-typeahead data=words type='text' class='form-control' placeholder='What is the name of your new item?' value=collectionName}}
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary" {{action 'createItem_finish'}}>Create</button>
            </span>
        </div>
    {{/if}}

    {{#if wizard_createLink }}
    <div>In Collection+JSON links can be placed at the collection level or at the item level.  The location of the link lets the client application know [blah blah explanation].</div>
    <div>Where would you like to place the link?</div>
        <div>
        {{view Ember.Select 
            class="form-control" 
            content=linkLocation 
            optionValuePath="content.index"
            optionLabelPath="content.name"
            style="max-width: 10.0em"							
            value=linkLocationSelection}}							  
        </div>
        <div>
            <button type="button" class="btn btn-primary" {{action 'previous'}}>Previous</button>
            <button type="button" class="btn btn-primary" {{action 'defineLink'}}>Next</button>
        </div>
    {{/if}}

    {{#if wizard_defineLink }}
      <label>URL</label>
      <div {{bind-attr class="class_url"}}>
      {{twitter-typeahead data=stateNames class="form-control" placeholder="target url" value=url}}
      </div>
      <div class="help-block">Use the syntax <b>$(<i>name</i>)</b> to point to an existing collection.  Use a URI scheme like <b>http://</b> to point to an external resource.  Otherwise a new collection will be created based on the URI name provided.</div>
      <label>rel</label>
      <div {{bind-attr class="class_rel"}}>
      {{input class="form-control" placeholder="rel" value=rel}}
      </div>
      <label>prompt</label>
      {{input class="form-control" placeholder="prompt" value=prompt}}
  <button type="button" class="btn btn-default" {{bind-attr disabled=isLinkValid}} {{action 'createLink_finish'}}>Create</button>
    {{/if}}

    {{#if wizard_createQuery}}
    <div>blah</div>
    {{/if}}

    </div>
    </div>

</div>
</div>

