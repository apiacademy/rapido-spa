<div class="row">
	<div class="col-md-12">
	
		<form class="form-inline">
			{{#if this}}
			{{view Ember.Select class="form-control" 
				content=this 
				optionValuePath="content.id"
				optionLabelPath="content.name"
				value=selectedMap}}				
			{{/if}}
			<div class="btn-group">
	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal_wizard_1">New Map</button>
	</div>
		
		</form>	
	</div>
	
</div>

{{outlet}}



<!-- MODALS -->
<div id="modal_wizard_1" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create A Design Map</h4>
		<h5>Basic Properties</h5>		  
      </div>
      <div class="modal-body">
          <div class="row">
              <div class="col-md-12">
        <form>
  			<fieldset>    				
				<div class="form-group"> 								
				{{twitter-typeahead id="createMapWizard_name" class="form-control input-lg" placeholder="What is the name of your new map?" value=newName data=typeaheadData}}				
				</div>				
				
				<div class="form-group">
					{{textarea class="form-control" value=newDescription cols="80" rows="4" placeholder="Describe the map"}}					
                 </div>
  			</fieldset>
		</form>
                  </div>
              </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
		  {{#if isPage1Valid}}
		  <button type="button" class="btn btn-success" data-dismiss="modal" {{action 'save'}}>Save</button>
		  {{else}}
		  <button type="button" class="btn btn-success disabled" data-dismiss="modal">Save</button>
		  {{/if}}
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

